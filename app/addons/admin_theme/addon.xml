<?xml version="1.0"?>
<addon scheme="3.0">
    <id>admin_theme</id>
    <version>0.1.0</version>
    <priority>120000</priority>
    <position>0</position>
    <status>disabled</status>
    <has_icon>Y</has_icon>
    <default_language>en</default_language>
    <functions>
    </functions>
    <settings edition_type="ROOT">
        <sections>
            <section id="general">
                <items>
                    <item id="license_settings">
                        <type>header</type>
                        <name>License Settings</name>
                    </item>
                    <item id="email">
                        <type>input</type>
                    </item>
                    <item id="password">
                        <type>password</type>
                    </item>
                    <item id="license">
                        <type>input</type>
                    </item>
                    <item id="info">
                        <type>info</type>
                        <handler>fn_sidekick_info,admin_theme</handler>
                    </item>

                    <item id="admin_theme_settings">
                        <type>header</type>
                        <name>Admin Theme Settings</name>
                    </item>
                    <item id="fullwidth">
                        <type>checkbox</type>
                    </item>
                    <item id="theme">
                        <type>selectbox</type>
                        <variants>
                            <item id="default">
                            </item>
                            <item id="flat">
                            </item>
                        </variants>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
    <compatibility>
        <php_extensions>
            <gd>
            </gd>
        </php_extensions>
        <dependencies>sidekick</dependencies>
        <core_version>
            <min>4.2.1</min>
        </core_version>
    </compatibility>
    <authors>
        <author>
            <name>HELOstore</name>
            <email>contact@helostore.com</email>
